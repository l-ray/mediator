<ul class="dates">
    {{#each this as |eventDate| }}
        <li {{bind-attr class=":day eventDate.isSaturday:saturday eventDate.isSunday:sunday" }}>
            {{#link-to 'groupset' eventDate}}
                <span class="name">
                    {{ format-date eventDate.date 'dd' }}
                </span>
            <span class="number">
                {{ format-date eventDate.date 'DD' }}
            </span>
            {{/link-to}}
        </li>
    {{/each}}
</ul>

{{outlet}}
