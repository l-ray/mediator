<div>
    <div class="col-md-3">
        <div class="well sidebar-nav">
            <ul class="list-group" id="connectionsListing">
                {{#each model.connections as |connection| }}
                    {{connection-details connection=connection tagName="li" classNames="list-group-item" }}
                {{/each}}
            </ul>
        </div>

        {{recycled-groups groups=groups tagName="div" classNames="well sidebar-nav recycled_groups"}}

    </div>
    <div class="col-md-9">
        <h1>groupSet</h1>

        <dl>
            <dt>event Date:</dt> <dd>{{ format-date model.date 'dddd, DD. MMMM YYYY' }}</dd>
        </dl>


      {{category-tagcloud items=categories allSelected=selectedCategories.empty remove='recycleCategory' addCategory='selectCategory'}}

        {{render 'groups' groups}}

        {{outlet}}

    </div>
</div>


